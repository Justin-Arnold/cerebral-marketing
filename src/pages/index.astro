---
import NeuralHead from "../components/NeuralHead.vue"
import EmailForm from "../components/EmailForm.vue"
import Header from "../components/Header.astro"
---

<html lang="en" data-theme="norde">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css">
	</head>
	<body class="bg-neutral overflow-hidden">
		<div class="h-screen mt-12">
			<Header />
			<div class="h-full grid place-items-center">
				<div class="h-[700px] flex items-center justify-center w-full">
				  <div class="flex flex-col gap-0 items-center h-full">
					<div class="text-[144px] font-light font-serif text-white leading-none mt-20">
						Cerebral
					</div>
					<div class="text-xl">
						A homelab dashboard that is truly mind-expanding
					</div>
					<EmailForm client:only/>
				  </div>
				  <NeuralHead client:only/>
				</div>
			  </div>
			
		</div>
	</body>
</html>
